<div class="container">
	<header class="d-flex flex-wrap justify-content-center py-3 mb-4 border-bottom">
		<a href="{{ path('app_product_index') }}" class="d-flex align-items-center mb-3 mb-md-0 me-md-auto text-dark text-decoration-none">
			<span class="fs-4"><img src="{{ asset('images/product/logo.png') }}" width="150">
			</span>
		</a>

		<ul class="nav nav-pills">
			{% if app.user %}
				<li class="nav-item">
					<a class="btn btn-outline-secondary">{{ app.user.email }}</a>
				</li>
			{% endif %}
			<li class="nav-item">
				<a class="btn btn-outline-warning" href="/{{ app.user ? 'logout' : 'login' }}" class="nav-link">
					{{ app.user ? 'Log Out' : 'Log In' }}
				</a>
				<a class="btn btn-outline-warning" href="/register" class="nav-link">
					{% if app.user %}Register
					{% endif %}
					{{ app.user ? '' : 'Register' }}
				</a>
			</li>
		</ul>
	</header>
</div>

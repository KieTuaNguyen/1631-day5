{% extends 'base.html.twig' %}

{% block title %}Product
{% endblock %}

{% block body %}
	<div class="container-md">
		<h1>Product</h1>

		<table class="table">
			<tbody>
				<tr>
					<th>Id</th>
					<td>{{ product.id }}</td>
				</tr>
				<tr>
					<th>Name</th>
					<td>{{ product.Name }}</td>
				</tr>
				<tr>
					<th>Price</th>
					<td>{{ product.Price }}</td>
				</tr>
				<tr>
					<th style="color: red;">Category</th>
					<td>{{ product.Category.Name }}</td>
				</tr>
			</tbody>
		</table>

		<a href="{{ path('app_product_index') }}">back to list</a>

		<a href="{{ path('app_product_edit', {'id': product.id}) }}">edit</a>

		{{ include('product/_delete_form.html.twig') }}
	</div>
{% endblock %}

{% extends 'base.html.twig' %}

{% block title %}Product
{% endblock %}

{% block body %}
	<div class="container-md">
		<h1>Product</h1>

		<table class="table">
			<tbody>
				<tr>
					<th>Id</th>
					<td>{{ product.id }}</td>
				</tr>
				<tr>
					<th>Name</th>
					<td>{{ product.Name }}</td>
				</tr>
				<tr>
					<th>Image</th>
					<td>
						<img src=" {{ asset('images/product/' ~ product.imgurl) }}" alt="Symfony" width="50" height="50">
					</td>
				</tr>

				<tr>
					<th>Price</th>
					<td>{{ product.Price }}</td>
				</tr>
				<tr>
					<th style="color: red;">Category</th>
					<td>{{ product.Category.Name }}</td>
				</tr>
			</tbody>
		</table>

		<a class="btn btn-outline-warning" href="{{ path('app_product_index') }}">Back to list</a>
		<a class="btn btn-outline-warning" href="{{ path('app_product_edit', {'id': product.id}) }}">Edit</a>
		{{ include('product/_delete_form.html.twig') }}
	</div>
{% endblock %}

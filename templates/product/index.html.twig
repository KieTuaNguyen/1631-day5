{% extends 'base.html.twig' %}

{% block title %}Product index
{% endblock %}

{% block body %}
	<div class="container-md">
		<div class="row">
			<div class="col-3">
				<form action={{ path('app_product_index') }} method="get">
					Category xuat tu dong cach1:
					<select name="category">
						<option value="">All</option>
						{% for category in categories %}
							<option value="{{ category.id }}" {{ (selectedCat==category.id) ? 'selected' }}>
								{{ category.name }}</option>
						{% endfor %}
					</select><br>
					Category:
					<br>
					<a style="text-decoration:none; color:grey;" href="{{ path('app_product_index') }}">
						All</a><br>
					{% for category in categories %}
						<a style="text-decoration:none; color:grey;" value="{{ category.id }}" {{ (selectedCat==category.id) ? 'selected' }} href="{{ path('app_product_show', {'id': category.id}) }}">
							{{ category.name }}<br></a>
					{% endfor %}


					Min Price:
					<input type="number" name="minPrice"><br>
					Max Price:
					<input type="number" name="maxPrice"><br>
					<input type="submit" value="Filter" class="btn btn-warning">
					|
					<a href="{{ path('app_product_index') }}" class="btn btn-warning">Reset</a>
					{% if app.user %}
						|
						<a href="{{ path('app_product_new') }}" class="btn btn-warning">Create new</a>
					{% endif %}
				</form>
			</div>
			<div class="col-9">
				<div class="container">
					<h4>Product Listing</h4>
					<div class="row row-cols-1 row-cols-md-4 g-4">
						{% for product in products %}
							<div class="col">
								<div class="card h-100">
									<img src=" {{ asset('images/product/' ~ product.imgurl) }}" class="card-img-top" alt="Symfony">
									<div class="card-body">
										<h5 class="card-title">{{ product.Name }}</h5>
										<h6 class="card-subtitle">Category:
											{{ product.category.Name }}</h6>
										<p>Price:
											{{ product.price }}</p>
									</div>
									<div class="card-footer">
										<a href="{{ path('app_product_show', {'id': product.id}) }}" class="btn btn-warning">Show</a>
									</div>
								</div>
							</div>
						{% endfor %}
					</div>
				</div>
			</div>
		</div>
		<div class="row mt-2">
			<div style="display:flex;text-align:center;justify-content:center">
				<nav aria-label="Page navigation">
					<ul class="pagination">
						{% for i in range(1, numOfPages) %}
							{% set style = app.request.get('pageId')==i ? "active" : "" %}
							<li class="page-item {{ style }}">
								<a class="page-link" href={{ path(app.request.attributes.get('_route'), app.request.query.all|merge({'pageId': i} )) }}>{{ i }}</a>
							</li>
						{% endfor %}
						<a class="btn btn-outline-secondary">Total product:
							{{totalItems}}
							and page
							{{ app.request.get('pageId') }}
							of
							{{ numOfPages }}<a/>
						</ul>
					</nav>
				</div>
			</div>
		{% endblock %}

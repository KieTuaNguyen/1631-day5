{% extends 'base.html.twig' %}

{% block title %}Category
{% endblock %}

{% block body %}
	<div class="container-md">
		<h1>Category</h1>

		<table class="table">
			<tbody>
				<tr>
					<th>Id</th>
					<td>{{ category.id }}</td>
				</tr>
				<tr>
					<th>Name</th>
					<td>{{ category.Name }}</td>
				</tr>
				<tr>
					<th>Description</th>
					<td>{{ category.Description }}</td>
				</tr>
				<tr>
					<th style="color: red;">Product List</th>
					<td>
						<table class="table">
							{% for product in category.products %}
								<tr>
									<td>{{ product.id }}</td>
									<td style="color: red;">{{ product.Name }}</td>
									<td>{{ product.Price }}</td>
								</tr>
							{% else %}
								<tr>
									<td colspan="4">no records found</td>
								</tr>
							{% endfor %}
						</table>
					</td>
				</tr>
			</tbody>
		</table>

		<a href="{{ path('app_category_index') }}">back to list</a>

		<a href="{{ path('app_category_edit', {'id': category.id}) }}">edit</a>

		{{ include('category/_delete_form.html.twig') }}
	</div>
{% endblock %}
